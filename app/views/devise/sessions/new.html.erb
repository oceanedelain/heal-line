<div class="form-container">
  <div class="row mt-4">
    <div class="container py-4 col-10">
      <h2 class="text-center blue-title">Me connecter</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      :label => "E-mail",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      :label => "Mot de passe",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, :label => "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions btn-validate mb-4">
          <%= f.button :submit, "Me connecter", class:"btn-blue" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
