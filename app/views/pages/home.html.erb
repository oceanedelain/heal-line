<div class="column">
  <div class="week-container flex">
    <% @scrolling_days.each do |day| %>
      <div class="day column">

        <%=  I18n.l(day, format: "%a").capitalize %>
        <div class="<%= 'today' if day == Date.today%>  <%= 'rdv-day' if Consultation.exists?(user: current_user, at: day.all_day) %>" >

          <strong><%= day.strftime('%e') %></strong>
        </div>
      </div>
    <% end %>
  </div>

  <% if current_user && current_user.next_consultation.soon? %>
    <div class="cercle-container flex column <%= circle_color %>">
      <h3 class="mt-1"><%= @consultation.category %></h3>
      <h5 class="black-p"><%= @consultation.at.strftime("%e %b, %l:%M")%></h5>
      <div class="info-rdv">
        <div class="flex">
          <i class="fas fa-map-marker-alt mr-3"></i><p>  <%= @consultation.doctor.address %></p>
        </div>
        <div class="flex">
          <i class="fas fa-user-md mr-3"></i><p> Dr  <%= @consultation.doctor.last_name %></p>
        </div>
        <div class="flex">
          <i class="far fa-lightbulb mr-3"></i><p>  <%= @consultation.notes %></p>
        </div>
      <%= link_to edit_consultation_path(@consultation) do %>
        <p class="text-center"><i class="fas fa-pencil-alt"></i></p>
      <% end  %>
      </div>
      <%= link_to new_consultation_path do %>
        <%= image_tag 'plus.png', class:'plus-btn' %>
      <% end %>
    </div>


  <% else %>
    <div class="cercle-container flex column <%= circle_color %>">
      <%= image_tag 'lightbulb.png', style:"width: 40px" %>
      <% if @consultation %>
        <h3>Prochain rdv</h3>
        <p class="black-p"><%= @consultation.at.strftime("%e %b %Y")%> - <%= @consultation.category%></p>
      <% end %>
      <p><%= random_conseil %></p>
      <%= link_to edit_consultation_path(@consultation) do %>
        <i class="fas fa-pencil-alt"></i>
      <% end  %>
      <%= link_to new_consultation_path do %>
        <%= image_tag 'plus.png', class:'plus-btn' %>
      <% end %>
    </div>
  <% end %>
</div>











