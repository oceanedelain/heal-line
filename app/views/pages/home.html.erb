<div class="column">
  <div class="week-container flex">
    <% @scrolling_days.each do |day| %>
      <div class="day column">
        <%=  I18n.l(day, format: "%a").capitalize %>
        <div class="<%= 'today' if day == Date.today%>">
          <strong><%= day.strftime('%e') %></strong>
        </div>

      </div>
    <% end %>
  </div>

  <div class="cercle-container flex column <%= circle_color %>">
    <%= image_tag 'lightbulb.png', style:"width: 40px" %>
    <% if @consultation %>
      <h3>Prochain rdv</h3>
      <p class="black-p"><%= @consultation.at.strftime("%e %b %Y")%> - <%= @consultation.category%></p>
    <% end %>
    <p><%= random_conseil %></p>
    <%= image_tag 'plus.png', class:'plus-btn' %>
  </div>
</div>


